[all]
bears = LineCountBear, FilenameBear
files = **.yaml, **.md
file_naming_convention = camel
ignore = **/__pycache__/**, **/__pycache__, __pycache__, __pycache__/**, **/*.pyc, *.pyc, .github/**
max_line_length = 120
max_lines_per_file = 2000

[all.yaml]
bears = YAMLLintBear
files = **.yaml, **.yml
ignore = .zuul.yaml
yamllint_config = .yamllint

[zuul.yaml]
bears = YAMLLintBear
files = .zuul.yaml
max_line_length = 180
